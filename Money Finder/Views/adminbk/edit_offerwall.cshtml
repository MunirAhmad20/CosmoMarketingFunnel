
@{
    ViewData["Title"] = "Admin";
    Layout = "~/Views/Layouts/_adminLayout.cshtml";
}









<div class="page-wrapper">


    <div class="container-fluid">


    <br />
<br />
    @foreach (var i in ViewBag.offerwall)
    {


        <div class="row">
            <div class="col-12">
                <div class="card m-b-30">
                    <div class="card-body">

                        <h4 class="mt-0 header-title">Edit Offer Wall </h4>



                    
                        <form action="/admin/updateofferwall" enctype="multipart/form-data" method="post">
                            <div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="card">
                                            <div class="card-body">

                                                <input type="file" id="input-file-now-custom-1" class="dropify" data-default-file="/UploadedImages/@i.Image" />

                                            </div>
                                        </div>
                                    </div>


                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="p-0">
                                            <div class="form-group">

                                                <label>Offer Title</label>
                                                <input hidden="" value="@i.Id" type="text" name="id" required="" data-mask="999-99-999-9999-9" class="form-control">

                                                <input hidden="" value="@i.Offer_Name" type="text" name="name" placeholder="Offer Title" data-mask="999-99-999-9999-9" class="form-control">

                                            </div>




                                        </div>
                                        <div class="p-0">
                                            <div class="form-group">

                                                <label>Offer Description</label>
                                                <input value="@i.description" type="text" name="disc"  placeholder="Offer Description" data-mask="999-99-999-9999-9" class="form-control">

                                            </div>




                                        </div>
                                        <div class="p-0">
                                            <div class="form-group">

                                                <label>Redirect Link</label>
                                                <input value="@i.redirect_link" type="text" name="redirectlink" required="" placeholder="https://localhost:5001/" data-mask="999-99-999-9999-9" class="form-control">

                                            </div>




                                        </div>
                                    </div>
                                </div>
                            </div>


                            <br />

                            <div class="form-group p-0">
                                <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    }
    </div> <!-- end col -->
</div> <!-- end row -->
                    </div><!-- container -->
</div> <!-- Page content Wrapper -->
                </div> <!-- content -->
