<script>
        $("#Enclude").hide();
        $("#Exclude").hide();
        $("#showCheckoutHistory").change(function (event) {
            if (document.getElementById('minimal-radio-1').checked) {
                $("#Exclude").hide();
                $("#Enclude").hide();
            }
            if (document.getElementById('minimal-radio-3').checked) {
                $("#Exclude").hide();
                $("#Enclude").show();
            }

            if ($('#minimal-radio-2').is(':checked')) {
                $("#Enclude").hide();
                $("#Exclude").show();
            }
        });


</script>
