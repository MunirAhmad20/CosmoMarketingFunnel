
@{
    ViewData["Title"] = "Skipoffers";
    Layout = "~/Views/Layouts/_adminLayout.cshtml";
}



<div class="page-wrapper">


    <div class="container-fluid">

        <br />
<br />
        <div class="row">
            <div class="col-12">
                <div class="card m-b-30">
                    <div class="card-body">

                        <h4 class="mt-0 header-title">Create New Path Offers </h4>



                      
                      @foreach (var i in ViewBag.path)
                      {


                        <form action="/admin/updateskipoffer" enctype="multipart/form-data" method="post">
                            <div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="card">
                                            <div class="card-body">

                                                <input type="file" id="input-file-now-custom-1" class="dropify" data-default-file="/UploadedImages/@i.Image" />

                                            </div>
                                        </div>
                                    </div>


                                </div>
                                <div class="row">
                                    <div class="col-md-12">

                                        <div class="p-0">
                                            <div class="form-group">

                                                <label>Offer Title</label>
                                                <input  type="text" value="@i.Offer_Name" name="title" required="" placeholder="Good News" data-mask="999-99-999-9999-9" class="form-control">
                                                <input style="display:none;" type="text" value="@i.Id" name="id"  data-mask="999-99-999-9999-9" class="form-control">

                                            </div>
                                        </div>

                                        <div class="p-0">
                                            <div class="form-group">

                                                <label>Offer Description</label>
                                                <input type="text" value="@i.Offer_description" name="disc" required="" placeholder="Description" data-mask="999-99-999-9999-9" class="form-control">

                                            </div>
                                        </div>


                                        <div class="p-0">
                                            <div class="form-group">

                                                <label>Tracking link </label>
                                                <input type="text" name="redirectlink" value="@i.redirect_link" required="" placeholder="https://localhost:5001/" data-mask="999-99-999-9999-9" class="form-control">

                                            </div>
                                        </div>


                                        @*<div class="p-0">
                                            <div class="form-group">

                                                <label>New Window Open Link</label>
                                                <input type="text" name="windowlink" value="@i.newwindow_link" required="" placeholder="https://localhost:5001/" data-mask="999-99-999-9999-9" class="form-control">

                                            </div>





                                        </div>
                                        <div class="p-0">
                                            <div class="form-group">

                                                <label>Skip Offer POP UP Link</label>
                                                <input type="text" name="skippop" value="@i.skip_link" placeholder="https://localhost:5001/" data-mask="999-99-999-9999-9" class="form-control">

                                            </div>





                                        </div>*@

                                        <div class="p-0">
                                            <div class="form-group">

                                                <label>PRIORITY</label>
                                                <input type="text" name="priority" value="@i.Priority"  class="form-control">

                                            </div>





                                        </div>
                                    </div>
                                </div>
                            </div>


                            <br />

                            <div class="form-group p-0">
                                <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                            </div>

                        </form>
                      }
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- end col -->
</div> <!-- end row -->
                    </div><!-- container -->
</div> <!-- Page content Wrapper -->
                </div> <!-- content -->
