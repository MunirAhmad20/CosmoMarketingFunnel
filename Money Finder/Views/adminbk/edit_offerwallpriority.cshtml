
@{
    ViewData["Title"] = "edit_priority";
    Layout = "~/Views/Layouts/_adminLayout.cshtml";
}
<div class="page-wrapper">


    <div class="container-fluid">

        <br />
        <br />
        <div class="row">
            <div class="col-12">
                <div class="card m-b-30">
                    <div class="card-body">

                        <h4 class="mt-0 header-title">Wall Offers Priority </h4>


                        @foreach (var i in ViewBag.offerwall)
                        {

                            <form action="/admin/updatewallpriority" enctype="multipart/form-data" method="post">
                                <div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="p-0">
                                                <div class="form-group">

                                                    <label>PRIORITY</label>
                                                    <input type="text" name="priority" value="@i.Priority" class="form-control">
                                                    <input style="display:none;" type="text" value="@i.Priorityindex" name="af" data-mask="999-99-999-9999-9" class="form-control">

                                                </div>


                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <br />

                                <div class="form-group p-0">
                                    <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                                </div>

                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- end col -->
</div> <!-- end row -->
                    </div><!-- container -->
</div> <!-- Page content Wrapper -->
                </div> <!-- content -->
