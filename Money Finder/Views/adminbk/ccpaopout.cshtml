
@{
    ViewData["Title"] = "CCPAOPOUT";
    Layout = "~/Views/Layouts/_adminLayout.cshtml";
}

<div class="page-wrapper">


    <div class="container-fluid">
         <br />
        <br />
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 style=" font-size: 25px; font-weight: bold;" class="card-title">CCPA DATABASE</h4>
                      
                        <div class="table-responsive m-t-40 m-t-400">
                            <table class="demo-foo-addrow2 table table-bordered table m-b-0 toggle-arrow-tiny example23" cellspacing="0" width="100%">
                                <thead>
                                    <tr>

                                        <th data-toggle="true">First Name</th>
                                        <th >Last Name</th>
                                        <th data-hide="phone">Phone</th>

                                        <th data-hide="phone">Email</th>
                                        <th  data-hide="all">Message</th>
                                        <th  data-hide="all">Request Type</th>
                                    </tr>
                                </thead>
                           
                                <tbody>

                                    @foreach (var i in ViewBag.ccpa)
                                    {
                                        <tr>
                                            <td>
                                                <a>@i.first_name</a>
                                            </td>

                                            <td>
                                                <a href="javascript:void(0);">@i.last_name</a>
                                            </td>

                                            <td>@i.phone</td>
                                            <td>@i.email</td>
                                            <td>@i.message</td>
                                            <td>@i.typerequest</td>




                                            @*<td> <a onclick="return checkDelete()"> @Html.ActionLink(" ", "Deleteoffer", "Admin", null, null, "", new { tid = i.Offer_Name }, new { @class = " btn  btn btn-outline-danger btn-circle fa fa-trash-o", onclick = "return checkDelete()", title = "Confirm" })</a></td>*@


                                        </tr>

                                    }
                                </tbody>

                            </table>
                        </div>
                        <script type="text/javascript">
                            function checkDelete() {
                                if (confirm('Are you sure you want to delete ?')) {

                                    return true
                                }
                                else {
                                    return false
                                }
                            }
                        </script>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


