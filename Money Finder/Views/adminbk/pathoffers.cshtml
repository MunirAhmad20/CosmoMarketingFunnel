            $("#Enclude").show();
            $("#states").val("Enclude");
            /*   alert($("#states").val());*/
        }

        if ($('#minimal-radio-2').is(':checked')) {
            $("#Enclude").hide();

            $("#Exclude").show();
            $("#states").val("Exclud");
            // alert($("#states").val());

        }
    });


</script>
