<script>
    $("#Enclude").hide();
    $("#Exclude").hide();
    $("#showCheckoutHistory").change(function (event) {
        if (document.getElementById('minimal-radio-1').checked) {
            $("#Exclude").hide();
            $("#Enclude").hide();
            $("#states").val("default");
