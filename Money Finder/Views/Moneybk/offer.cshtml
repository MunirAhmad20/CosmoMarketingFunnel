
@{
    ViewData["Title"] = "offers";
    Layout = "~/Views/Layouts/_emptyLayout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet">
<style>

        /*   a {
            color: darkblue !important;
        }
    */
        .image-link {
            background: url("/Resourcse/Asset 72.png");
        }
</style>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css">
<form action="/Money/offer" method="post">
    <input style="display:none;"  name="count" value="@ViewBag.count"  />
@foreach (var i in ViewBag.package)
{
<section id="main-reg " class="mb-3" style="background: #F9FAFB; padding: 60px 0px 0px 23px; ">
    <div class="row " style="margin:0 auto">
        <div class="col-12 ">
            <div class="card">
                <div class="card-body" style=" box-shadow: 0px 0px 10px rgb(0 0 0 / 40%);">

                    <h2 class="text-center">
                        Select Your Card
                    </h2>
                    <h3 class="text-center" style="color:cornflowerblue;">@i.Offer_Name</h3>
                    <p class="text-center mt-4">

                        @i.Offer_description

                    </p>
                </div>
            </div>
            <div>
                <div>

                    <img style=" width: 100%; min-height: 18em;" src="~/UploadedImages/@i.Image" />
                    <div class="row mt-3">
                        <div class="col-md-4"></div>
                        <div class="col-md-4">
                            <div class="row">
                                <div class="col-6">
                                    <button class="btn btn-primary float-end" style="width: 100%;background-color:#4284BD;" type="submit"><i style="color: #84D096; padding: 4%;" class="fa fa-check"></i>YES</button>
                                </div>
                                <div class="col-6">
                                    <button class="btn btn-primary" style="background-color: #4284BD; width: 100%;" type="button"><i style="padding: 4%; color: #D34C46; " class="fa fa-close"></i>NO</button>
                                </div>
                            </div>
                        </div>


                        <div class="col-md-4"></div>
                    </div>
                </div>
            </div>



        </div>
    </div>
</section>
}
</form>


