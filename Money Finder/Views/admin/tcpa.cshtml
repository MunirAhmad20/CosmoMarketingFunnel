
@{
    ViewData["Title"] = "Admin";
    Layout = "~/Views/Layouts/_adminLayout.cshtml";
}


@foreach (var i in ViewBag.tcpadisc)
{
<form action="/admin/addtcpa" enctype="multipart/form-data" method="post">
    <div class="row">
        <div class="col-12">
            <div class="card m-b-30">
                <div class="card-body">

                    <h4  class="mt-0 header-title h3bg">Offer Name </h4>





                    <div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="p-0">
                                    <div class="form-group">
                                        <input hidden="" value="@i.Id" type="text" name="id" data-mask="999-99-999-9999-9" class="form-control">

                                        <input type="text" value="@i.Offer_Name" name="name" required="" placeholder="Offer Title" data-mask="999-99-999-9999-9" class="form-control">

                                    </div>




                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card m-b-30">
                <div class="card-body" style=" box-shadow: 0 9px 4px 0 rgb(0 0 0 / 20%), 0 6px 20px 0 rgb(0 0 0 / 19%);">
                    <h4  class="mt-0 header-title h3bg">Description</h4>


                    <div class="p-0">
                        <div class="form-group">

                            <textarea style=" height: 2px;" type="text" name="bulletpoint" required="" placeholder="Description" data-mask="999-99-999-9999-9" class="form-control"> @i.bulletpoint </textarea>
                            <br />
                            <textarea style=" height: 9em;" type="text" name="redirectlink" required="" placeholder="Description" data-mask="999-99-999-9999-9" class="form-control"> @i.description </textarea>


                        </div>




                    </div>
                </div>
            </div>
        </div>


        <br />

        <div class="form-group p-0">
            <button type="submit" style="float: right; background: #319795; border-radius: 6px;" class="btn btn-primary waves-effect waves-light">Submit</button>
        </div>



    </div>
    
   
</form>
}

